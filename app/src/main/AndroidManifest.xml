<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 정확한 알람 스케줄링 (자정 업데이트용) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- 알림 표시 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 부팅 완료 감지 (알람 재설정용) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- 이미지 읽기 권한 (사용자 배경 이미지용) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyWidget">

        <!-- 메인 액티비티 -->
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DailyWidget">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 위젯 장르 선택 화면 (위젯 추가 시 첫 단계) -->
        <activity
            android:name=".widget.GenreSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.DailyWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- 위젯 스타일/배경 설정 화면 (위젯 추가 시 두 번째 단계) -->
        <activity
            android:name=".widget.DailyWidgetConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.DailyWidget" />

        <!-- 통합 위젯 프로바이더 (모든 장르 지원) -->
        <receiver
            android:name=".widget.UnifiedWidgetProvider"
            android:exported="false"
            android:label="일일 문장">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/daily_widget_info" />
        </receiver>

        <!-- 위젯 업데이트 리시버 (자정 갱신, 수동 새로고침, 시스템 이벤트 처리) -->
        <receiver
            android:name=".widget.DailyWidgetReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <!-- 자정 업데이트 트리거 -->
                <action android:name="com.example.dailywidget.ACTION_MIDNIGHT_UPDATE" />
                <!-- 날짜 변경 감지 -->
                <action android:name="android.intent.action.DATE_CHANGED" />
                <!-- 부팅 완료 (알람 재설정) -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 앱 업데이트 완료 (알람 재설정) -->
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>