<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@android:color/transparent">

    <!-- 둥근 모서리 배경 컨테이너 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_rounded_background"
        android:clipToOutline="true">

        <!-- 배경 이미지들 -->
        <ImageView
            android:id="@+id/widget_background_solid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/widget_bg_default"
            android:scaleType="fitXY"
            android:contentDescription="컬러 배경"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/widget_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="이미지 배경"
            android:visibility="gone"/>

        <!-- RelativeLayout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- ⭐ 하단 컨테이너 (source + extra를 묶음) -->
            <LinearLayout
                android:id="@+id/widget_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <!-- Source -->
                <TextView
                    android:id="@+id/widget_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif"
                    android:visibility="visible" />

                <!-- Extra -->
                <TextView
                    android:id="@+id/widget_extra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="4dp"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- ⭐ 메인 텍스트: 상단부터 하단 컨테이너 위까지, 중앙 정렬 -->
            <TextView
                android:id="@+id/widget_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/widget_bottom_container"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:lineSpacingMultiplier="1.0"
                android:visibility="visible" />

        </RelativeLayout>

        <!-- 새로고침 버튼 -->
        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@android:drawable/ic_popup_sync"
            android:contentDescription="새로고침"
            android:scaleType="fitCenter"
            android:alpha="0.6"
            android:visibility="visible" />

    </FrameLayout>

</FrameLayout>